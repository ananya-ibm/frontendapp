{
  "name": "@exo/frontend-apps-{{ name }}",
  "version": "0.2.0",
  "scripts": {
    "build": "root-exec CUSTOM_ENV=ssr,client dotenv -e .env webpack",
    "build:csr": "root-exec CUSTOM_ENV=csr,client dotenv -e .env webpack",
    "build:aem": "rm -rf dist && root-exec NODE_ENV=development CMS_NAME=aem dotenv -e .env webpack",
    "build:ssr": "npm run build",
    "build:app:{{ name }}:csr": "npm run build:csr",
    "build:app:{{ name }}:ssr": "npm run build",
    "postinstall:env": "cp -n .env.example .env || true",
    "dev": "npm run dev:csr",
    "dev:apps": "npm run dev:csr",
    "dev:app:{{ name }}": "npm run dev:csr",
    "dev:app:{{ name }}:csr": "npm run dev:csr",
    "dev:app:{{ name }}:ssr": "npm run dev:ssr",
    "dev:csr": "root-exec NODE_ENV=development CUSTOM_ENV=client dotenv -e .env webpack-dev-server --liveReload=false --hot=false --host 0.0.0.0",
    "dev:ssr": "root-exec NODE_ENV=development CUSTOM_ENV=client,ssr dotenv -e .env webpack && root-exec NODE_ENV=development dotenv -e .env npm start",
    "analyze": "root-exec NODE_ENV=production CUSTOM_ENV=client webpack",
    "start:prod": "root-exec NODE_ENV=production dotenv -e .env npm start",
    "prod:app:{{ name }}": "root-exec NODE_ENV=production npm run build && root-exec NODE_ENV=production npm start",
    "start": "node ./dist/server.bundle.js ./dist/lodable-stats.json",
    "start:csr": "node ./dist/csr-server.bundle.js",
    "start:csr:{{ name }}": "root-exec NODE_ENV=production dotenv -e .env npm run start:csr",
    "build:docker": "docker build . -t clean-ssr-light",
    "docker": "docker run -it -p 3000:3000 --env-file .env clean-ssr-light",
    "lint": "root-exec eslint ./client ./server && stylelint ./client/components",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "root-exec stylelint ./client/components",
    "stylelint:fix": "npm run stylelint -- --fix",
    "package": "npx -p git+ssh://git@github.ibm.com:ixliberty/ixl-aem-tools.git#v0.3.0 package"
  },
